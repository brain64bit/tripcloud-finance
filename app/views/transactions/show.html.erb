	<!-- BEGIN PAGE CONTENT-->
	<div class="row-fluid invoice">
		<div class="row-fluid invoice-logo">
			<div class="span6 invoice-logo-space">LOGO</div>
			<div class="span6">
				<p>#5652256 / <%= @transaction.issued_date %></p>
			</div>
		</div>
		<hr />
		<div class="row-fluid">
			<div class="span6">
				<h4>Client:</h4>
				<ul class="unstyled">
					<li><%= @transaction.company %></li>
					<li><%= @transaction.address %></li>
					<li>Attn : <%= @transaction.to_name %></li>
				</ul>
			</div>
			<div class="span6">
				<h4>Client:</h4>
				<ul class="unstyled">
					<li>Invoice No. : <%= @transaction.invoice_number %></li>
					<li>Date : <%= @transaction.issued_date %></li>
					<li>Due Date : <%= @transaction.time_limit %></li>
				</ul>
			</div>
		</div>
		<div class="row-fluid">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th class="hidden-480">Route</th>
						<th class="hidden-480">Origin</th>
						<th class="hidden-480">Destination</th>
						<th class="hidden-480">Departure</th>
						<th class="hidden-480">Arrival</th>
						<th class="hidden-480">Flight No.</th>
						<th class="hidden-480">Airline</th>
						<th class="hidden-480">Book Ref.</th>
						<th>Total</th>
					</tr>
				</thead>
				<tbody>
					<% no = 1 %>
					<% @transaction.paxes.each do |pax| %>
						<tr>
							<td><%= no %></td>
							<td><%= pax.full_name %></td>
							<td class="hidden-480"><%= pax.route %></td>
							<td class="hidden-480"><%= pax.departure.name %></td>
							<td class="hidden-480"><%= pax.arrival.name %></td>
							<td class="hidden-480"><%= pax.departure_date %></td>
							<td class="hidden-480"><%= pax.arrival_date %></td>
							<td class="hidden-480"><%= pax.flight_number %></td>
							<td class="hidden-480"><%= pax.airline.name %></td>
							<td class="hidden-480"><%= pax.booking_code %></td>
							<td class="hidden-480"><%= pax.publish_fare %></td>
						</tr>
						<% no == no + 1 %>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="row-fluid">
			<div class="span4">
				<div class="well">
					<p>Please Remit Payment transfer to :</p>
					<% @bank_accounts.each do |bank_account| %>
						<p>
							<%= bank_account.bank_name %><br>
							<strong>Account Number : <%= bank_account.account_number %></strong><br>
							<strong>Account Name : <%= bank_account.account_name %></strong><br>
						</p>
					<% end %>
				</div>
			</div>
			<div class="span8 invoice-block">
				<ul class="unstyled amounts">
					<li><strong>Sub - Total amount:</strong> IDR <%= number_with_delimiter(@transaction.total_price, delimiter: ".", separator: ",") %></li>
					<li><strong>Discount:</strong> 0%</li>
					<li><strong>VAT:</strong> -----</li>
					<li><strong>Grand Total:</strong> IDR <%= number_with_delimiter(@transaction.total_price, delimiter: ".", separator: ",") %></li>
				</ul>
				<br />
				<a class="btn blue big hidden-print" onclick="javascript:window.print();">Print <i class="icon-print icon-big"></i></a>
				<a class="btn green big hidden-print">Download <i class="m-icon-big-swapright m-icon-white"></i></a>
				<a class="btn green big hidden-print">Send Email <i class="m-icon-big-swapright m-icon-white"></i></a>
			</div>
		</div>
	</div>
	<!-- END PAGE CONTENT-->
</div>
<%= content_for(:invoice) do %>
	<%= stylesheet_link_tag "invoice_screen", media: "screen" %>
	<%= stylesheet_link_tag "invoice_print", media: "print" %>
<% end %>