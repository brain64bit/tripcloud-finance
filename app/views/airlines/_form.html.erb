<%= simple_form_for @airline, html: { class: "form-horizontal"} do |f| %>
	<%= f.input :name, input_html: { class: "span6 m-wrap" } %>
	<%= f.input :code, input_html: { class: "span6 m-wrap" } %>	
	<%= f.input :logo, as: :file %>
	<% if @airline.logo.present? %>
		<div class="control-group">
			<div class="controls">
				<%= image_tag @airline.get_logo("mini_thumbnail") %>
			</div>
		</div>
	<% end %>
	<div class="form-actions">
		<%= f.button :submit, "Submit", class: "btn blue" %>
	</div>
<% end %>