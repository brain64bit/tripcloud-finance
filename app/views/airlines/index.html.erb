<!-- BEGIN SAMPLE TABLE PORTLET-->
<div class="portlet box blue">
	<div class="portlet-title">
		<div class="caption"><i class="icon-cogs"></i><%= @title %></div>
		<div class="tools">
			<a href="javascript:;" class="collapse"></a>
			<!-- <a href="#portlet-config" data-toggle="modal" class="config"></a>
			<a href="javascript:;" class="reload"></a>
			<a href="javascript:;" class="remove"></a> -->
		</div>
	</div>
	<div class="portlet-body no-more-tables">
		<div class="table-toolbar">
			<div class="btn-group">
				<%= link_to new_airline_path, class: "btn green", id: "sample_editable_1_new"  do %>
					Add New <i class="icon-plus"></i>
				<% end %>
			</div>
			<div class="btn-group pull-right">
				<button class="btn dropdown-toggle" data-toggle="dropdown">Tools <i class="icon-angle-down"></i>
				</button>
				<ul class="dropdown-menu pull-right">
					<li><a href="#">Print</a></li>
					<li><a href="#">Save as PDF</a></li>
					<li><a href="#">Export to Excel</a></li>
				</ul>
			</div>
		</div>
		<table class="table-bordered table-striped table-condensed cf">
			<thead class="cf">
				<tr>
					<th>Name</th>
					<th>Code</th>
					<th>Logo</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% @airlines.each do |airline| %>
					<tr>
						<td data-title="Name"><%= airline.name %></td>
						<td data-title="Code"><%= airline.code %></td>
						<td data-title="Logo"><%= image_tag airline.get_logo("mini_thumbnail") if airline.logo.present? %></td>
						<td data-title="Actions">
							<%= link_to edit_airline_path(airline), class: "btn mini purple" do %>
								Edit <i class="icon-edit"></i>
							<% end %>
							<%= link_to airline_path(airline), class: "btn mini black", method: :delete, confirm: "Are you sure?" do %>
								Delete <i class="icon-trash"></i>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<!-- END SAMPLE TABLE PORTLET-->
<% content_for(:title) do %>
	<%= @title %>
<% end %>