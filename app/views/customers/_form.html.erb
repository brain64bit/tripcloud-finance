<%= simple_form_for @customer, html: { class: "form-horizontal"} do |f| %>
	<%= f.input :customer_type, as: :select, collection: ["Corporate", "Personal"] %>
	<%= f.input :title, as: :select, collection: ["Mr", "Mrs", "Ms"] %>
	<%= f.input :name, input_html: { class: "span6 m-wrap" } %>
	<%= f.input :company, input_html: { class: "span6 m-wrap" } %>	
	<%= f.input :division, input_html: { class: "span6 m-wrap" } %>	
	<%= f.input :address, input_html: { class: "span6 m-wrap", rows: 3 } %>
	<%= f.input :email, input_html: { class: "span6 m-wrap" } %>	
	<%= f.input :phone, input_html: { class: "span6 m-wrap" } %>	
	<div class="form-actions">
		<%= f.button :submit, "Submit", class: "btn blue" %>
	</div>
<% end %>