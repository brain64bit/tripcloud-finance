<%= simple_form_for @bank_account, html: { class: "form-horizontal" } do |f| %>
	<%= f.input :bank_name, input_html: { class: "span6 m-wrap" }  %>
	<%= f.input :account_name, input_html: { class: "span6 m-wrap" }  %>
	<%= f.input :account_number, input_html: { class: "span6 m-wrap" }  %>
	<%= f.input :branch, input_html: { class: "span6 m-wrap" }  %>
	<div class="form-actions">
		<%= f.button :submit, "Submit", class: "btn blue" %>
	</div>
<% end %>